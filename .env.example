# The port the server will run on
PORT=3000

# A secret key to protect your API endpoints
# Generate a secure random string for this in your actual .env file
API_KEY=your_secret_api_key

# Path to the SQLite database file. 
# For an in-memory database (useful for testing, but not for production), you can use ":memory:"
DATABASE_PATH=./db.sqlite

# The minimum priority level for an account to be used for scraping
MIN_PRIORITY=1

# The file path for the initial list of accounts to seed the database
ACCOUNTS_FILE_PATH=./accounts.json

# Log level for the application logger (e.g., 'info', 'debug', 'warn', 'error')
LOG_LEVEL=info